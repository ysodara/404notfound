@model IEnumerable<SwimElite.Models.Time>

@{
    ViewBag.Title = "SearchDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SearchDetails</h2>




    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event.Location)
            </th>
            <th>
                Name
            </th>

            <th>
                Time
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.FirstName) @Html.DisplayFor(modelItem => item.Person.LastName)

                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Time1)
                </td>

            </tr>
        }

    </table>

    <p>
        @Html.ActionLink("Back to Search", "Search")
    </p>
