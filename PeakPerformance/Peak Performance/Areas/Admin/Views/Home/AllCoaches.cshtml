@model IEnumerable<Peak_Performance.Models.Coach>

@{
    ViewBag.Title = "AllCoaches";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center">All Coaches</h2>
<hr />

<table class="table table-bordered table-hover table-striped">
    <thead align="center">
        <tr>
            <th>
                Coach Name
            </th>
            @*<th>
                    Coach Email
                </th>*@
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr align="center">
                <td>
                    @Html.DisplayFor(modelItem => item.Person.FirstName) @Html.DisplayFor(modelItem => item.Person.LastName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Person.Active)
                </td>
            </tr>
        }
    </tbody>
</table>