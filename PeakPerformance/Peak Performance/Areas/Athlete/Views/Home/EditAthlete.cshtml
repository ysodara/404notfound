@model Peak_Performance.Models.Athlete

@{
    ViewBag.Title = "Edit Your Information";
    Layout = "~/Areas/Athlete/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditAthleteSave", "Home", FormMethod.Post, new { @class = "form-horizontal", @area = "Athlete" }))
{
    <div class="form-horizontal">
        <h2 align="center">Edit Your Information</h2>
        <hr />

        @*Gender Change*@
        <div class="form-group">
            <div class="control-label col-md-2">
                Gender
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Gender, @name = "gender", @id = "gender" } })
            </div>
        </div>

        @*Height Change*@
        <div class="form-group">
            <div class="control-label col-md-2">
                Height (In Feet and Inches)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Height, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.HeightFeet, @type = "number", @name = "feet", @id = "feet" } })
                @Html.EditorFor(model => model.Height, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.HeightInch, @type = "number", @name = "inches", @id = "inches" } })
            </div>
        </div>

        @*Weight Change*@
        <div class="form-group">
            <div class="control-label col-md-2">
                Weight (In Pounds)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Weight, @type = "number", @min = "70", @name = "weight", @id = "weight" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" style="color: white;" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}