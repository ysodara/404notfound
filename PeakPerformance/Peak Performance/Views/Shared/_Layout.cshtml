<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Peak Performance</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="border: none !important; box-shadow: none !important;">
        <div class="container container-fluid">
            <div class="navbar-header" style="border: none !important; box-shadow: none !important;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Images/Header.png" />
            </div>
            <div class="navbar-collapse collapse" style="border: none !important; box-shadow: none !important;">
                <ul class="nav navbar-nav" style="margin-top: 20px; ">
                    @if (User.IsInRole("Athlete"))
                    {
                        <li>@Html.ActionLink("Home", "Index", new { area = "Athlete", controller = "Home" })</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                    else if (User.IsInRole("Coach"))
                    {
                        <li>@Html.ActionLink("Home", "Index", new { area = "Coach", controller = "Home" })</li>
                        <li>@Html.ActionLink("Workout Search", "SearchMain", new { area = "Coach", controller = "Workouts" })</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Home", "Index", new { area = "Admin", controller = "Home" })</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                </ul>
                <div style="margin-top: 20px; ">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        <br />
        @RenderBody()
        <br />
        <br />
        <hr />
        <footer>
            <p align="center">&copy; @DateTime.Now.Year - Peak Performance</p>
            <a class="col-md-offset-4 col-md-2" style="color:gray;" href="~/Home/TermsAndConditions"><p align="center" style="font-size: smaller;">Terms and Conditions</p></a>
            <a class="col-md-2" style="color:gray;" href="~/Home/PrivacyPolicy"><p align="center" style="font-size: smaller;">Privacy Policy</p></a>
            <a class="col-md-12" style="color:gray;" href="~/Home/Credits"><p align="center" style="font-size: smaller;">Credits</p></a>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/app.js"></script>
</body>
</html>